    <link rel="stylesheet" href="/Assets/css/contact.css">

    <% include partials/header %>

    <div class="head-container">
        <h2 class="page-header dark-text">Contact</h2>
        <div class="page-header-line"></div>
    </div>

<div class="container-fluid contact-container" style="margin: auto;">
    <h1>Let's chat, I would like to meet you.</h1>
    <div class="row">
        <div class="container form-container">
            <form action="/contact" method="POST">
                <div class="form-row">
                    <div class="form-group col-lg-4 col-md-12">
                        <label for="name">Your Name</label>
                        <input type="text" class="form-control form-control-lg" id="name" placeholder="Smooth McGroove" name="name" required>
                    </div>
                    <div class="form-group col-lg-4 col-md-12">
                        <label for="companyName">Your Company</label>
                        <input type="text" class="form-control form-control-lg" id="companyName" placeholder="Acme Inc." name="companyName" required>
                    </div>
                    <div class="form-group col-lg-4 col-md-12">
                        <label for="phone">Phone Number</label>
                        <input type="tel" class="form-control form-control-lg tel" id="phone" placeholder="(555)-867-5309" name="phone" value="" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="email_address">Email Address</label>
                    <input class="form-control form-control-lg" type="email" id="email_address" placeholder="ZeldaFan96@FakeEmail.com" name="email" required>
                </div>
                <div class="form-group">
                    <label for="add_details">Additional Details</label>
                    <textarea class="form-control form-control-lg" id="add_details" name="details" rows="5" required></textarea>
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit">
                </div>
            </form>
        </div>
    </div>
</div>

